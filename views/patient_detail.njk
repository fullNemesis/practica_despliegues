{% extends "base.njk" %}

{% block content %}
<div class="card">
    <div class="card-header">
        <h2>Detalle del Paciente</h2>
    </div>
    <div class="card-body">
        <h5 class="card-title">{{ patient.name }} {{ patient.surname }}</h5>
        <div class="row">
            <div class="col-md-6">
                <p><strong>DNI:</strong> {{ patient.dni }}</p>
                <p><strong>Fecha de Nacimiento:</strong> {{ patient.birthDate | date }}</p>
                <p><strong>Teléfono:</strong> {{ patient.phone }}</p>
                <p><strong>Email:</strong> {{ patient.email }}</p>
            </div>
            <div class="col-md-6">
                <p><strong>Dirección:</strong> {{ patient.address }}</p>
                <p><strong>Ciudad:</strong> {{ patient.city }}</p>
                <p><strong>Código Postal:</strong> {{ patient.zipCode }}</p>
            </div>
        </div>
        <div class="mt-3">
            <a href="/patients" class="btn btn-secondary">Volver</a>
            <a href="/patients/{{ patient._id }}/edit" class="btn btn-warning">Editar</a>
        </div>
    </div>
</div>
{% endblock %} 