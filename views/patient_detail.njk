{% extends "base.njk" %}

{% block content %}
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Detalle del Paciente</h2>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-12">
                    <h3 class="card-title text-primary">{{ patient.name }} {{ patient.surname }}</h3>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="info-group mb-3">
                        <h4 class="text-secondary">Información Personal</h4>
                        <p><i class="bi bi-person-badge"></i> <strong>DNI:</strong> {{ patient.dni }}</p>
                        <p><i class="bi bi-calendar"></i> <strong>Fecha de Nacimiento:</strong> 
                            {% if patient.birthDate %}
                                {{ patient.birthDate | date }}
                            {% else %}
                                No especificada
                            {% endif %}
                        </p>
                        <p><i class="bi bi-telephone"></i> <strong>Teléfono:</strong> {{ patient.phone }}</p>
                        <p><i class="bi bi-envelope"></i> <strong>Email:</strong> {{ patient.email }}</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-group mb-3">
                        <h4 class="text-secondary">Dirección</h4>
                        <p><i class="bi bi-house"></i> <strong>Dirección:</strong> {{ patient.address }}</p>
                        <p><i class="bi bi-building"></i> <strong>Ciudad:</strong> {{ patient.city }}</p>
                        <p><i class="bi bi-mailbox"></i> <strong>Código Postal:</strong> {{ patient.zipCode }}</p>
                    </div>
                </div>
            </div>
            
            <div class="mt-4 d-flex gap-2">
                <a href="/patients" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                <a href="/patients/{{ patient._id }}/edit" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %} 